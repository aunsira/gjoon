<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
		<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-default" role="navigation">
        <div class="nav-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Github API Example</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href='/profile'>View Profile</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if !authenticated? %>
              <img style="height:50px; margin-top: -2px;" src='https://dl.dropboxusercontent.com/s/xufut5v34svtlyg/goon.jpg?dl=0'/>
            <% else%>
              <img style="height:50px; margin-top: -2px;" src='<%= session['user']['avatar_url'] %>'/>
            <% end%>
            <li class="dropdown">
                <% if !authenticated? %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello stranger<b class="caret"></b></a>
                <% else %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= session['user']['login']%><b class="caret"></b></a>
                <% end %>
              <ul class="dropdown-menu">
                <% if !authenticated? %>
                  <li><a href="https://github.com/login/oauth/authorize?scope=user:email,repo&client_id=<%= client_id %>">Sign in</a></li>
                <% else %>
                  <li><a href="/logout">Sign out</a></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
      <div>
        <%= yield %>
      </div>

    </div>

    <script src="/jquery-2.1.4.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>


